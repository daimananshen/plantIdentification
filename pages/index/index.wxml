<!--index.wxml-->
<view>
  <view class="page-body">
    <view class="page-section page-section-spacing swiper">
      <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
        <block wx:for="{{item}}" wx:key="key">
          <swiper-item>
            <image class="carouselImg" mode="aspectFill" src='{{item.image}}'></image>
          </swiper-item>
        </block>
      </swiper>
    </view>
  </view>
  <!-- 猜您喜欢 后期改成上拉加载-->
  <view>
    <view class="like">
      <view class="lineLeft"></view>猜您喜欢
      <view class="lineRight"></view>
    </view>
    <view class="likeGoods">
      <view class="like-item" wx:for="{{item}}" wx:key="key" wx:for-index="key" wx:for-item="v">
        <image class='img' mode="aspectFill" src='{{v.image}}'>
        </image>
        <rich-text class="likeName likeTitle">{{v.title}}</rich-text>
        <rich-text class="likeName likeContent">{{v.content}}</rich-text>
      </view>
    </view>
  </view>
</view>